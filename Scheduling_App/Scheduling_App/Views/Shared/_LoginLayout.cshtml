<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap -->
    <link href="@Url.Content("~/StaticFiles/vendors/bootstrap/dist/css/bootstrap.min.css")" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="@Url.Content("~/StaticFiles/vendors/font-awesome/css/font-awesome.min.css")" rel="stylesheet">
    <!-- NProgress -->
    <link href="@Url.Content("~/StaticFiles/vendors/nprogress/nprogress.css")" rel="stylesheet">
    <!-- Animate.css -->
    <link href="@Url.Content("~/StaticFiles/vendors/animate.css/animate.min.css")" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="@Url.Content("/StaticFiles/build/css/custom.min.css")" rel="stylesheet">

</head>
<body class="login">
    <div>
        @RenderBody()
    </div>
</body>


@*Common Script links Goes here*@

